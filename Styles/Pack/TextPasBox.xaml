<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type TextBox}" x:Key="authTB">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
        <Setter Property="Padding" Value="5 5 5 0"/>
        <Setter Property="Height" Value="30" />
        <Setter Property="Foreground" Value="{StaticResource darkcolor}" />
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderBrush" Value="{StaticResource color5}"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontFamily" Value="Bahnschrift"/>
    </Style>

    <Style TargetType="{x:Type PasswordBox}" x:Key="authPB">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
        <Setter Property="Padding" Value="5 5 5 0"/>
        <Setter Property="Height" Value="30" />
        <Setter Property="Foreground" Value="{StaticResource darkcolor}" />
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderBrush" Value="{StaticResource color5}"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontFamily" Value="Bahnschrift"/>
    </Style>
    
</ResourceDictionary>