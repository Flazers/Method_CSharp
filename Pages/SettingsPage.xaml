<Page x:Class="MethodHelper.Pages.SettingsPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MethodHelper.Pages.MethodElement"
      mc:Ignorable="d" 
      d:DesignHeight="860" d:DesignWidth="1540"
      Title="CRUD">
    <Border Padding="25">
        <DockPanel>
            <StackPanel Style="{DynamicResource StackSettings}">
                <TextBlock Text="Анимация выдвижения меню"/>
                <ToggleButton x:Name="MenuAnim" Height="30" Style="{DynamicResource ToggleSettings}"/>
            </StackPanel>
            <StackPanel Style="{DynamicResource StackSettings}">
                <TextBlock Text="Еще какая то настройка"/>
            </StackPanel>
            <Button Style="{StaticResource MainBtn}" Content="Сохранить изменения" Click="Button_Click"/>
        </DockPanel>
    </Border>
</Page>